.navbar-static-top {
	margin-bottom: 20px;
}

.brand{
	background: url(<%= asset_path "icon.png" %>) 50px 0 no-repeat !important;
	background-repeat: no-repeat;
	padding-left: 110px !important;
}

ul{
	margin:0 !important;
}

ul#users-list, ul#groups-list{
	padding:10px 0;
}

li.user{
	box-shadow: 2px 2px 10px;
	display:inline-block;
	margin-right:10px;
	width:96px;
}

