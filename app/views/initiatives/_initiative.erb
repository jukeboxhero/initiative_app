<section class="span4" style="background-color: #ecf0f1; margin-bottom: 20px; border-radius: 0 0 10px">

  <div class="row-fluid initiative-container" style="box-sizing: border-box; padding: 14px 14px 8px;">

    <%# link_to initiative, :class => 'header-link' %>

      <div class="span4 hidden-phone">
        <%= image_tag initiative.mugshot(128), :class => 'initiative-mugshot img-polaroid' %>
      </div>
      <div class="span8" style="overflow: hidden">
        <h1><%= link_to initiative.name, initiative %></h1>
        <ul class="objectives unstyled">
          <% initiative.description.split('. ').each do |sentence| %>
           <li><i class="icon-chevron-right"></i> <%= sentence %></li>
          <% end %>
        </ul>
      </div>

    <%# end %>

  </div>

  <div class="row-fluid" style="background-color: rgba(0,0,0,0.1); border-radius: 0 0 10px; padding: 6px; box-sizing: border-box">
    <div class="span6 hidden-phone">
      <% cache ["count2", initiative] do %>
        <span class="label label-inverse"><%= pluralize initiative.users.count, "member" %>, <%= pluralize initiative.groups.count, "group" %></span>
      <% end %>
    </div>
    <div class="span6" style="text-align: right;">
      <ul class="inline">
        <!--<li class="label label-important"><i class='icon-time icon-white'></i> <%= created_date initiative.start_date %></li>-->
        <% cache ["tags", initiative] do %>
          <% initiative.tag_list.each do |t| %>
            <a href="<%= tag_path(t) %>"><li class="label label-success"><i class='icon-tag icon-white'></i> <%= t %></li></a>
          <% end %>
        <% end %>
      </ul>
    </div>
  </div>
</section>